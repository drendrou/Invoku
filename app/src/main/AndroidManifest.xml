<?xml version="1.0" encoding="utf-8" standalone="no"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.invoku">

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning,HardcodedDebugMode"
        android:fullBackupContent="@xml/backup_descriptor">
        <activity
            android:name="com.example.invoku.IvkMainActivity"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.invoku.Ivkwordactivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.example.invoku.Ivksecondactivity"
            android:theme="@style/AppThemeNo"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.example.invoku.Ivksettingactivity"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name="com.example.invoku.Ivkinfo" />
        <activity android:name="com.example.invoku.ivkresult" />
    </application>
</manifest>